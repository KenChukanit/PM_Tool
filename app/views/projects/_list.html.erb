
<div class="row mb-2 ">
    <div class="col-6 col-md-4"> 
        <h4> Project title</h4>
    </div>
     <div class="col-6 col-md-4"> 
        <h4> Discussion Count</h4>
    </div>
    <div class="col-6 col-md-4 mb-2">
        <h4>Project Owner</h4>
    </div>

</div>
<hr>
<table> 
    <% @projects.each do |project|%>
    <div class="row">
        <div class="col-6 col-md-4"> 
            <h3>
            <%= link_to(project.title, project_path(project.id)) %>    
            </h3>              
        </div>
        <div class="col-6 col-md-4"> 
            <h5>
            <%= project.discussions_count %>
            </h5>
        </div>
        <div class="col-6 col-md-4"> 
            <h5>
            <%= project.user&.full_name %>
            </h5>
        </div>
    </div>
    <%end%>
</table>
