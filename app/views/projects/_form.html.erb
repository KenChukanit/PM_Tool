<%=   form_with model: @project, local: true do |f| %>
<%  if @project.errors.present? %>
<%= @project.errors.full_messages.join(', ')%>
<% end %>
<div>
    <%=  f.label :title%>
    <%=  f.text_field :title%>
</div>
<div>
    <%=  f.label :description%>
    <%=  f.text_area :description%>
</div>
<div>
    <%=  f.label :due_date%>
    <%=  f.date_field :due_date%>
</div>
<%= f.submit  %> 
<% end %>