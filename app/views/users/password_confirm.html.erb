<h1>  Please confirm your password</h1>

<%= form_with model: @user, local:true do |f|%>
<% if @user.errors.any? %>
<p>
    <%= @user.errors.full_messages.join(', ')%>
</p>
<% end %>


<div>
    <%= f.label :password %>
    <%= f.password_field :password %>
</div>
<div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
</div>

<%= f.submit "Enter"%>
<% end %>